{
  "extends": ["config:base"],
  "ignoreUnstable": true,
  "devDependencies": {
    "automerge": true
  },
  "pinVersions": false,
  "respectLatest": true,
  "rebaseStalePrs": true,
  "prConcurrentLimit": 4,
  "timezone": "America/New_York",
  "packageRules": [
    {
      "packagePatterns": ["*"],
      "depTypeList": ["devDependencies"],
      "updateTypes": ["major"],
      "labels": ["UPDATE-MAJOR-DEV"]
    },
    {
      "packagePatterns": ["*"],
      "depTypeList": ["devDependencies"],
      "updateTypes": ["minor", "patch"],
      "labels": ["UPDATE-NON-MAJOR-DEV"]
    },
    {
      "packagePatterns": ["*"],
      "depTypeList": ["dependencies"],
      "updateTypes": ["major"],
      "labels": ["UPDATE-MAJOR"],
      "semanticCommits": true
    },
    {
      "packagePatterns": ["*"],
      "depTypeList": ["dependencies"],
      "updateTypes": ["minor", "patch"],
      "labels": ["UPDATE-NON-MAJOR"],
      "semanticCommits": true
    }
  ],
  "schedule": ["before 3am on the first day of the month"]
}
